@model IEnumerable<ShopThoiTrangNam.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Quản lý sản phẩm</h1>

<!-- Dropdown lọc danh mục -->
<form asp-action="Index" method="get" class="mb-3">
    @{
        var selectedCategoryId = Context.Request.Query["categoryId"].ToString();
        var categories = (ViewBag.Categories as List<ShopThoiTrangNam.Models.Category>) ?? new List<ShopThoiTrangNam.Models.Category>();
    }
    <div class="input-group" style="max-width: 300px;">
        <select class="form-select" name="categoryId" style="border: 2px solid #000;" onchange="this.form.submit()">
            <option value="">-- Tất cả danh mục --</option>
            @foreach (var category in categories)
            {
                if (selectedCategoryId == category.CategoryId.ToString())
                {
                    <option value="@category.CategoryId" selected>@category.CategoryName</option>
                }
                else
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
        </select>
    </div>
</form>

<p>
    <a class="btn btn-outline-success mt-auto" asp-action="Create">Thêm sản phẩm mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.StockQuantity)</th>
            <th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.Category)</th>
            <th>@Html.DisplayNameFor(model => model.Size)</th>
            <th>@Html.DisplayNameFor(model => model.Color)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.StockQuantity</td>
                <td>@item.ImageUrl</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.Size</td>
                <td>@item.Color</td>
                <td>
                    <a class="btn btn-dark btn-sm my-1" asp-action="Details" asp-route-id="@item.ProductId">Chi tiết</a>
                    <a class="btn btn-warning btn-sm my-1" asp-action="Edit" asp-route-id="@item.ProductId">Sửa</a>
                    <a class="btn btn-danger btn-sm my-1" asp-action="Delete" asp-route-id="@item.ProductId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
