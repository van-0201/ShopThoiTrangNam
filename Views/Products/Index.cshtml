@model IEnumerable<ShopThoiTrangNam.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<!-- Thông báo -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="get" class="mb-3">
    @{
        var selectedCategoryId = ViewData["SelectedCategoryId"]?.ToString();
        var categories = ViewBag.Categories as List<ShopThoiTrangNam.Models.Category> ?? new List<ShopThoiTrangNam.Models.Category>();
    }
    <div class="input-group" style="max-width:300px;">
        <select name="categoryId" class="form-select" onchange="this.form.submit()">
            <option value="">-- Tất cả danh mục --</option>
            @foreach (var category in categories)
            {
                if (selectedCategoryId == category.CategoryId.ToString())
                {
                    <option value="@category.CategoryId" selected>@category.CategoryName</option>
                }
                else
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
        </select>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-outline-success mt-auto">Thêm sản phẩm mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Giá</th>
            <th>Mô tả</th>
            <th>Tồn kho</th>
            <th>Ảnh</th>
            <th>Ngày tạo</th>
            <th>Danh mục</th>
            <th>Kích thước</th>
            <th>Màu sắc</th>
            <th>Sản phẩm cha</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.StockQuantity</td>
                <td><img src="@item.ImageUrl" alt="@item.ProductName" style="height:50px;" /></td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.Size</td>
                <td>@item.Color</td>
                <td>@item.ParentProduct?.ProductName "Không có"</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-dark btn-sm my-1">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm my-1">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm my-1">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
