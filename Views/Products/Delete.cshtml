@model ShopThoiTrangNam.Models.Product

<h1>Xóa sản phẩm</h1>

<dl class="row">
    <dt class="col-sm-4">Tên sản phẩm</dt><dd class="col-sm-8">@Model.ProductName</dd>
    <dt class="col-sm-4">Danh mục</dt><dd class="col-sm-8">@Model.Category?.CategoryName</dd>
    <dt class="col-sm-4">Sản phẩm cha</dt><dd class="col-sm-8">@Model.ParentProduct?.ProductName ?? "-"</dd>
    <dt class="col-sm-4">Giá</dt><dd class="col-sm-8">@Model.Price</dd>
    <dt class="col-sm-4">Mô tả</dt><dd class="col-sm-8">@Model.Description</dd>
    <dt class="col-sm-4">Số lượng</dt><dd class="col-sm-8">@Model.StockQuantity</dd>
    <dt class="col-sm-4">Kích thước</dt><dd class="col-sm-8">@Model.Size</dd>
    <dt class="col-sm-4">Màu sắc</dt><dd class="col-sm-8">@Model.Color</dd>
    <dt class="col-sm-4">Ngày tạo</dt><dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
</dl>

<form asp-action="Delete" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
    <input type="hidden" asp-for="ProductId" />
    <input type="submit" value="Xóa" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Quay về</a>
</form>
