<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="product-image" alt="@Model.ProductName"/>
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Tên</dt><dd class="col-sm-9">@Model.ProductName</dd>
            <dt class="col-sm-3">Giá</dt><dd class="col-sm-9">@Model.Price</dd>
            <dt class="col-sm-3">Mô tả</dt><dd class="col-sm-9">@Model.Description</dd>
            <dt class="col-sm-3">Tồn kho</dt><dd class="col-sm-9">@Model.StockQuantity</dd>
            <dt class="col-sm-3">Danh mục</dt><dd class="col-sm-9">@Model.Category?.CategoryName</dd>
            <dt class="col-sm-3">Kích thước</dt><dd class="col-sm-9">@Model.Size</dd>
            <dt class="col-sm-3">Màu sắc</dt><dd class="col-sm-9">@Model.Color</dd>
            <dt class="col-sm-3">Sản phẩm cha</dt><dd class="col-sm-9">@Model.ParentProduct?.ProductName ?? "Không có"</dd>
            <dt class="col-sm-3">Ngày tạo</dt><dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
        </dl>
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>

<style>
.product-image {
    height: 330px;      
    width: auto;        
    display: block;
    margin: 0 auto;
    object-fit: contain; 
}
</style>
