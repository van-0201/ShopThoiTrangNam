@model ShopThoiTrangNam.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<h1>@ViewData["Title"]</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CategoryName)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CategoryName)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

    <dt class="col-sm-2">Danh mục cha</dt>
</dl>

<div>
    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model.CategoryId">Sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay về danh sách</a>
</div>
