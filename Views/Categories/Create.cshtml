@model ShopThoiTrangNam.Models.Category

@{
    ViewData["Title"] = "Tạo danh mục mới";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <!-- Hiển thị lỗi tổng quát -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <!-- Category Name -->
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- Parent Category -->
            <div class="mb-3">
                <label asp-for="ParentId" class="form-label"></label>
                <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentId">
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Tạo</button>
                <a asp-action="Index" class="btn btn-secondary">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
